<div class="container mx-auto p-4" data-controller="pizza-builder"
    data-pizza-builder-selected-size-name-value=""
    data-pizza-builder-selected-size-price-value="0"
    data-pizza-builder-base-price-value="0"
    data-pizza-builder-total-price-value="0">
  
  <h1 class="text-3xl font-bold mb-6 text-center">游꼣 Construye tu RKpizza</h1>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
    
    <div class="md:col-span-2">
      
      <h2 class="text-2xl font-semibold mt-6 mb-4">Elige el Tama침o</h2>
      <div id="size-selection" class="flex flex-wrap gap-4 mb-8" 
          data-pizza-builder-target="sizeSelection">
        
        <% @pizza_sizes.each do |size_name| %>
          <% 
            # Definici칩n de Precios Base por TAMA칌O (NUEVA L칍GICA)
            size_name_sym = size_name.to_sym 
            size_price = case size_name_sym
                        when :peque침a then 4.00    # <--- $4.00
                        when :mediana then 6.00    # <--- $6.00
                        when :grande then 8.50     # <--- $8.50
                        when :familiar then 11.00  # <--- $11.00
                        else 0.00
                        end
          %>

          <div class="p-4 rounded-lg shadow-md cursor-pointer hover:bg-gray-200 transition-colors duration-150"
              data-action="click->pizza-builder#selectSize"
              data-size-name="<%= size_name %>"
              data-size-price="<%= size_price %>"  <%# Pasamos el precio BASE del tama침o %>
              data-pizza-builder-target="sizeOption">
            <p class="font-bold text-lg"><%= size_name.humanize %></p>
            <p class="text-sm text-gray-600">Base: $<%= '%.2f' % size_price %></p>
          </div>
        <% end %>
      
      </div>
      <h2 class="text-2xl font-semibold mb-4 border-b pb-2">Elige tu Base</h2>
      <div id="bases-selection" class="flex flex-wrap gap-4 mb-8">
        <% @bases.each do |base| %>
          <div class="p-4 border rounded-lg shadow-md cursor-pointer hover:bg-gray-100 transition duration-150"
              data-pizza-builder-target="baseSelection"
              data-action="click->pizza-builder#selectBase"
              data-base-id="<%= base.id %>"
              data-base-price="<%= base.price %>"
              data-image-url="<%= base.image_url %>">
            <h3 class="font-bold"><%= base.name %></h3>
            <p class="text-sm text-gray-600">$<%= base.price %></p>
          </div>
        <% end %>
      </div>

      <h2 class="text-2xl font-semibold mb-4 border-b pb-2">A침ade Ingredientes</h2>
      <div id="ingredients-selection" class="flex flex-wrap gap-4">
        <% @ingredients.each do |ingredient| %>
          <div class="p-4 border rounded-lg shadow-sm cursor-pointer transition duration-150"
              data-pizza-builder-target="ingredientSelection"
              data-action="click->pizza-builder#toggleIngredient"
              data-ingredient-id="<%= ingredient.id %>"
              data-ingredient-price="<%= ingredient.price %>"
              data-image-url="<%= ingredient.image_url %>">
            <h3 class="font-bold"><%= ingredient.name %></h3>
            <p class="text-xs text-green-600">+$<%= ingredient.price %></p>
          </div>
        <% end %>
      </div>
    </div>
    
    <div class="md:col-span-1 sticky top-4">
      <h2 class="text-2xl font-semibold mb-4 border-b pb-2">Tu Pizza Actual</h2>
      
      <div data-pizza-builder-target="pizzaVisualArea" 
          class="relative w-full h-64 bg-gray-200 rounded-full overflow-hidden mb-4 border-8 border-yellow-700">
        <p class="text-center pt-24 text-gray-500">Selecciona una base...</p>
      </div>
      
      <div class="bg-white p-4 rounded-lg shadow-xl border">
        <p class="font-bold text-lg mb-2">Total Estimado:</p>
        <p data-pizza-builder-target="totalPriceDisplay" 
          id="total-price" class="text-3xl text-red-600 font-extrabold">$0.00</p>
        <button data-pizza-builder-target="orderButton"
                data-action="click->pizza-builder#placeOrder"
                id="place-order-button" disabled
                class="mt-4 w-full bg-blue-600 text-white py-2 rounded-lg hover:bg-blue-700 transition duration-200 opacity-50 cursor-not-allowed">
          Realizar Pedido
        </button>
      </div>
    </div>
    
  </div>
</div>